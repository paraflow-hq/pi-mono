{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"isolatedDeclarations": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2022"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
